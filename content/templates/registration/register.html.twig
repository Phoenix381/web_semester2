{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow mt-5">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Регистрация</h1>

                    {% if form_errors(registrationForm) %}
                    <div class="alert alert-danger">{{ form_errors(registrationForm) }}</div>
                    {% endif %}

                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                        <div class="mb-3">
                            {{ form_row(registrationForm.username, {
                                'label': 'Имя пользователя',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.plainPassword, {
                                'label': 'Пароль',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_row(registrationForm.agreeTerms, {
                                'label': 'Согласие на обработку персональных данных',
                                'label_attr': {'class': 'form-check-label'},
                                'attr': {'class': 'form-check-input'},
                                'row_class': 'form-check'
                            }) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">Зарегистрировать</button>
                        </div>

                        <div class="text-center mt-3">
                            <small>Уже есть аккаунт? <a href="{{ path('app_login') }}">Вход</a></small>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}