{% extends 'base.html.twig' %}

{% block title %}Product {{ product.id }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <a href="{{ path('home') }}" class="btn btn-secondary btn-sm">
                ← Назад
            </a>
            <h2 class="mb-0">{{ product.name }}</h2>
        </div>
        <div class="card-body">
            <p class="card-text">{{ product.description }}</p>
            
            <!-- Review Form -->
            {% if is_granted('ROLE_USER') %}
            <div class="mb-5">
                <h4>Добавить отзыв</h4>
                {{ form_start(review_form) }}
                    <div class="form-group">
                        {{ form_widget(review_form.content, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 3,
                                'placeholder': 'Напишите ваш отзыв...'
                            }
                        }) }}
                        {{ form_errors(review_form.content) }}
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Отправить отзыв</button>
                {{ form_end(review_form) }}
            </div>
            {% endif %}

            <!-- Reviews List -->
            <h4>Отзывы ({{ product.reviews|length }})</h4>
            <ul class="list-group">
                {% for review in product.reviews %}
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div>{{ review.content }}</div>
                            <small class="text-muted">
                                {% if review.owner %}
                                    {{ review.owner.username }}
                                {% endif %}

                            </small>
                        </div>
                    </li>
                {% else %}
                    <li class="list-group-item">Пока нет отзывов</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}